@model LoginVM

@{
    ViewBag.Title = "Logga in";
}


<div class="Everything" style="text-align:center">

    <div class="formContainer">
        <form class="createForm" asp-controller="Login" asp-action="Index">

            <div class="formRow">
                <label class="labelItem" asp-for="UserName"></label>
                <input class="inputText" asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
            <br />
            <div class="formRow">
                <label class="labelItem" asp-for="Password"></label>
                <input class="inputText" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <br />
            <br />
                <input type="submit" value="Logga in" class="ButtonStyleLargeAutoSize"/>
        </form>
    </div>
    <br />

    <a class="link" href="/Create/index">Skapa ny inloggning</a>

    <br />
    <br />

</div>
